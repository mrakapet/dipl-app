= form_for @thesis do |f|
  - if @thesis.errors.any?
    #error_explanation
      %h2= "#{pluralize(@thesis.errors.count, "error")} prohibited this thesis from being saved:"
      %ul
        - @thesis.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .field
    = f.label :abstract
    = f.text_area :abstract, class: 'form-control', rows: '5'
  .field
    = f.label :language
    = f.text_field :language, class: 'form-control'
  .field
    = f.label :faculty
    = f.select :faculty, faculties, class: 'form-control'
  .field
    = f.fields_for :author do |a|
      .field
        = a.label :firstname
        = a.text_field :firstname, class: 'form-control'
      .field
        = a.label :surname
        = a.text_field :surname, class: 'form-control'
  .field
    = f.label :defended
    = f.date_select :defended
  .actions
    = f.submit 'Save', class: 'btn btn-default'
